
$moon-menu-button=4rem

.moon-menu,.moon-menu-text {
  position: fixed;
  right: 1.5rem;
  bottom: 1.5rem;
  width: $moon-menu-button;
  height: $moon-menu-button;
  //background-color: #000;
}

.moon-menu-svg,.moon-menu-button {
  width: $moon-menu-button;
  height: $moon-menu-button;
}

.moon-menu-cricle {
  fill: #607d8b;
  opacity: .9;
}

.moon-menu-border {
  stroke: #607d8b;
  opacity: .9;
  stroke-width: 0;
  fill: none;
  transform: rotate(-90deg);
  transform-origin: 50% 50%;
}

.moon-menu-points {
  transform: translate3d($moon-menu-button/2,$moon-menu-button/2,0);
}

.moon-menu-point {
  fill: white;
}

.moon-menu-text {
  color: white;
  font-weight: 400;
  text-align: center;
  line-height: $moon-menu-button;
  font-size: 1.2rem;
  display: none;
}

.moon-menu-item {
  position: fixed;
  right: 2.5rem;
  bottom: 2.5rem;
  width: 2rem;
  height: 2rem;
  display: none;
}
