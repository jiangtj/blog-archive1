$content-desktop         = 75%
$content-desktop-large   = 75%
$content-desktop-largest = 1000px

//font
//Dosis Domine Source+Serif+Pro
@import url('https://fonts.googleapis.com/css?family=Inconsolata|Baloo+Bhaijaan|Itim|Josefin+Sans:600|Lato|Lobster|Overlock:700|Short+Stack');
$font-family-chinese      = 'PingFang SC', 'Microsoft JhengHei'
$font-family-base         = 'Itim', $font-family-chinese, sans-serif
$font-family-logo         = 'Lobster', $font-family-base
$font-family-headings     = $font-family-base
$font-family-posts        = $font-family-base
$font-family-monospace    = 'Inconsolata', consolas, $font-family-chinese, monospace
$font-family-icons        = 'FontAwesome'

$font-size-base           = 13px
$font-size-small          = $font-size-base - 2px
$font-size-smaller        = $font-size-base - 4px
$font-size-large          = $font-size-base + 2px
$font-size-larger         = $font-size-base + 4px

$code-font-family         = $font-family-monospace
$code-font-size           = 95%

$line-height-base           = 1.8
$line-height-code-block     = 1.6  // Can't be less than 1.3


