//font
//Dosis Domine Source+Serif+Pro Baloo+Bhaijaan Josefin+Sans:600 Lato Overlock:700 Short+Stack
@import url('https://fonts.googleapis.com/css?family=Inconsolata|Itim|Lobster');
$font-family-chinese      = 'PingFang SC', 'Microsoft YaHei'
$font-family-base         = 'Itim', $font-family-chinese, sans-serif
$font-family-logo         = 'Lobster', $font-family-base
$font-family-headings     = $font-family-base
$font-family-posts        = $font-family-base
$font-family-monospace    = 'Inconsolata', consolas, $font-family-chinese, monospace
$font-family-icons        = 'FontAwesome'

$font-size-base           = 14px
$font-size-small          = $font-size-base
$font-size-smaller        = $font-size-base
$font-size-large          = $font-size-base
$font-size-larger         = $font-size-base

$code-font-family         = $font-family-monospace
$code-font-size           = 95%

$line-height-base           = 1.8
$line-height-code-block     = 1.6  // Can't be less than 1.3


